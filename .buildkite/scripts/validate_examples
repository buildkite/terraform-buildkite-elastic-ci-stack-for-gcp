#!/usr/bin/env bash

set -euo pipefail

echo "Validating example configurations..."

for example in examples/*/; do
  if [ -d "$example" ]; then
    echo ""
    echo "üîç Validating $example"
    (
      cd "$example"
      terraform init -backend=false
      terraform validate
    )
    echo "‚úÖ $example is valid"
  fi
done

echo ""
echo "‚úÖ All examples validated successfully"
exit 0
