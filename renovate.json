{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "preview:buildkite"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Group all Terraform provider updates together",
      "matchManagers": ["terraform"],
      "matchPackagePatterns": ["*"],
      "groupName": "terraform providers"
    },
    {
      "description": "Group all Buildkite pipeline updates together",
      "matchManagers": ["buildkite"],
      "groupName": "buildkite pipeline"
    }
  ],
  "customManagers": [
    {
      "description": "Update Buildkite Agent version in Packer install script",
      "customType": "regex",
      "fileMatch": ["^packer/linux/scripts/install-buildkite-agent$"],
      "matchStrings": [
        "AGENT_VERSION=(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "buildkite/agent",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "description": "Update GCP Buildkite image references in Terraform variables",
      "customType": "regex",
      "fileMatch": ["^modules/compute/variables\\.tf$"],
      "matchStrings": [
        "default\\s*=\\s*\"projects/buildkite-gcp-stack/global/images/buildkite-ci-stack-x86-64-(?<currentValue>\\d{4}-\\d{2}-\\d{2}-\\d{4})\""
      ],
      "datasourceTemplate": "custom.buildkite-gcp-images",
      "depNameTemplate": "buildkite-ci-stack-x86-64",
      "versioningTemplate": "loose"
    }
  ]
}
